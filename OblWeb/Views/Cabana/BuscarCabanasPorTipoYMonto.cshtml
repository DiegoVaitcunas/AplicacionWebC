@{
    ViewData["Title"] = "BuscarCabanasPorTipoYMonto";
}
@using ObligatorioP3WebApplication.Models;
@model TipoModel[];

<h1>BuscarCabanasPorTipoYMonto</h1>

<h4>CabañaModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BuscarCabanasPorTipoYMontoListar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="nombreT" class="control-label"></label>
                <select name="nombreT" id="nombreT" class="form-control">
                    <option value="" disabled selected>Seleccionar el tipo de cabaña</option>
                    @foreach (TipoModel t in Model)
                    {
                        <option value="@t.nombre"> @t.nombre </option>
                    }
                </select>
            </div><br />
            <div class="form-group">
                <label for="monto" class="control-label">Monto</label>
                <input type="number" name="monto" for="monto" class="form-control" />
                <span validation-for="monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
