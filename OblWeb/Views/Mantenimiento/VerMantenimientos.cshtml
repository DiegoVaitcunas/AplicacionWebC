@using ObligatorioP3WebApplication.Models
@model MantenimientoModel[]

@if (Model == null)
{
	<div class="row">
		<div class="col-md-4">
			<form asp-controller="Mantenimiento" asp-action="VerMantenimientos" method="post">
				<div class="form-group">
					<input type="number" name="id" id="id" value="@ViewBag.id" hidden class="form-control" />
				</div>
				<div class="form-group">
					<label for="t1" class="control-label">Fecha inicial</label>
					<input type="date" name="t1" id="t1" data-date-format="MM DD YYYY" class="form-control">
					<span validation-for="t1" class="text-danger"></span>
				</div>
				<br />
				<div class="form-group">
					<label for="t2" class="control-label">Fecha final</label>
					<input type="date" name="t2" id="t2" data-date-format="MM DD YYYY" class="form-control">
					<span validation-for="t2" class="text-danger"></span>
				</div>
				<br />
				<div class="form-group">
					<input type="submit" value="Buscar" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
}
@if (Model != null)
{
	<table class="table">
		<thead>
			<tr>
				<th>
					Mantenimiento Id
				</th>
				<th>
					Habitacion
				</th>
				<th>
					Fecha del mantenimiento
				</th>
				<th>
					Descripcion
				</th>
				<th>
					Costo
				</th>
				<th>
					Nombre del trabajador
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.mantenimientoId)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Habitacion)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.FechaMantenimiento)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Descripcion)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Costo)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.NombreTrabajador)
					</td>
				</tr>
			}
		</tbody>
	</table>
	<br />
}
@if (ViewBag.Error != null)
{
	<div class="alert-danger">
		<p>@ViewBag.Error</p>
	</div>
	<br />
}
