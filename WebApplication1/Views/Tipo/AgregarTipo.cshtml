@model Library.BusinessLogic.Entities.Tipo

<h4>Tipo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarTipo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label"></label>
                <!--Html.TextArea("Description", "", new { class = "form-control" }) -->
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="costoXHuesped" class="control-label"></label>
                <input type="number" asp-for="costoXHuesped" class="form-control" />
                <span asp-validation-for="costoXHuesped" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@{
    if (ViewBag.mensajeError != null)
{
        <div class="alert-danger">
        <p>@ViewBag.mensajeError</p>
    </div>
}
@if (ViewBag.mensajeSucces != null)
{
    <div class="alert-success">
        <p>@ViewBag.mensajeSucces</p>
    </div>
}
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<a asp-controller="Tipo" asp-action="Index">Volver</a>